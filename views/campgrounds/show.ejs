<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6 offset-3">
    <div class="card my-4">
        <img src="<%=camp.image %>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title"><%= camp.title %></h5>
          <p class="card-text">
            <%= camp.description %>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-secondary"><%= camp.location %></li>
          <li class="list-group-item">$<%= camp.price %>/night</li>
          <!-- <li class="list-group-item">A third item</li> -->
        </ul>
        <div class="card-body">
            <a class="card-link btn btn-info" href="/campgrounds/<%=camp._id %>/edit">edit</a>
            <form class="d-inline" action="/campgrounds/<%=camp._id %>?_method=DELETE" method="POST">
              <button class="card-link btn btn-danger">Delete Camp</button>
            </form>
        </div>
      </div>
  </div>
</div>

