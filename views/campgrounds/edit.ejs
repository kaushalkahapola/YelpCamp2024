<% layout('layouts/boilerplate') %>

    <div class="row my-4">
        <h1 class="text-center">Edit Campground %></h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=camp._id %>?_method=PUT" method="POST">
            <div class="mb-3">
              <label class="form-label" for="title">Title</label>
              <input class="form-control" type="text" name="title" id="title" value="<%=camp.title %>"/>
            </div>
            <div class="mb-3">
              <label class="form-label" for="location">Location</label>
              <input class="form-control" type="text" name="location" id="location" value="<%=camp.location %>" />
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1">@</span>
                    <input
                    value=<%=camp.price %>
                    type="text"
                    class="form-control"
                    placeholder="0.00"
                    aria-label="price"
                    aria-describedby="price-label"
                    name="price"
                    />
                  </div>
              </div>
              <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="description" id="description" ><%=camp.description %></textarea>
              </div>
              <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="image" id="image" value=<%=camp.image %>/>
              </div>
      
            <button class="btn btn-info">Update Campground</button>
          </form>
          <a href="/campgrounds/<%=camp._id %>">Cancel editing</a>
        </div>
      </div>