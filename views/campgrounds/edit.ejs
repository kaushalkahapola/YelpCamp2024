<% layout('layouts/boilerplate') %>

    <h1>Edit Camp - <%= camp.title %></h1>
    <form action="/campgrounds/<%=camp._id %>?_method=PUT" method="POST">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%=camp.title %>">
        <label for="location">Location</label>
        <input type="text" name="location" id="location" value="<%=camp.location %>">
        <button>Submit</button>
    </form>
    <a href="/campgrounds/<%=camp._id %>">Cancel editing</a>
